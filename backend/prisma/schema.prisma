generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id String @id @default(uuid())

  title String

  description String?

  boardId String @map("board_id")

  column CardStatus @default(TODO)

  position Int @default(0)

  board Board @relation("board_cards", fields: [boardId], references: [id], onDelete: Cascade)

  @@map("cards")
}

model Board {
  id       String @id @default(uuid())
  publicId String @unique @map("public_id")
  title    String @default("My Board")
  cards    Card[] @relation("board_cards")

  @@map("boards")
}

enum CardStatus {
  TODO
  IN_PROGRESS
  DONE
}
